---
import StatusTicker from "@/components/StatusTicker.astro";
import LegacyStatusPatcher from "@/components/LegacyStatusPatcher.astro";

interface Props { meta?: { title?: string; description?: string } }
const { meta = {} } = Astro.props;
const TITLE = meta.title ?? "PingTraceSSH";
const DESC  = meta.description ?? "Ping • Trace • Fix • Repeat.";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#0b0f14" />
    <title>{TITLE}</title>
    <meta name="description" content={DESC} />
    <link rel="icon" href="/favicon.ico" />
    <style>
      :root { --container-max: 1200px; }
      .container { max-width: var(--container-max); margin-inline: auto; padding-inline: 1rem; }
      @media (min-width: 640px) { .container { padding-inline: 1.5rem; } }
      img, video, canvas, svg { max-width: 100%; height: auto; }
      body { -webkit-text-size-adjust: 100%; }
    </style>
  </head>
  <body class="min-h-screen bg-black text-neutral-200 antialiased">
    <!-- Neutralize legacy calls site-wide -->
    <LegacyStatusPatcher />
    <!-- Global fixed status bar -->
    <StatusTicker />
    <!-- Page content -->
    <slot />
  </body>
</html>
