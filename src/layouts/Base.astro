---
/**
 * Base.astro — mobile @ 75% scale by default
 * - Viewport initial-scale=0.75 (phones render smaller without pinch-zoom)
 * - CSS fallback: root font-size ~12px on small screens
 * - Safe container and dark theme
 */
interface Props {
  meta?: { title?: string; description?: string };
}
const { meta = {} } = Astro.props;
const TITLE = meta.title ?? "PingTraceSSH";
const DESC = meta.description ?? "Ping • Trace • Fix • Repeat.";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <!-- Make mobile render at ~75% by default -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=0.75, viewport-fit=cover"
    />
    <meta name="theme-color" content="#0b0f14" />

    <title>{TITLE}</title>
    <meta name="description" content={DESC} />
    <link rel="icon" href="/favicon.ico" />

    <!-- Global, mobile-friendly defaults -->
    <style>
      /* Fallback so rem-based UIs also feel ~75% on small screens */
      @media (max-width: 640px) {
        html { font-size: 12px; } /* 12px ≈ 75% of the typical 16px root */
      }

      :root { --container-max: 1200px; }
      .container { max-width: var(--container-max); margin-inline: auto; padding-inline: 1rem; }
      @media (min-width: 640px) { .container { padding-inline: 1.5rem; } }

      img, video, canvas, svg { max-width: 100%; height: auto; }
      body { -webkit-text-size-adjust: 100%; overflow-x: hidden; }
    </style>
  </head>

  <body class="min-h-screen bg-black text-neutral-200 antialiased">
    <slot />
  </body>
</html>
