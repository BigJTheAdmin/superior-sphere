---
// File: src/pages/toolkits.astro
// Premium tier page — fixed feature list layout (no weird line breaks),
// glassmorphism, neon accents, and direct handoff to /download?plan=...
import PageLayout from "@/layouts/Base.astro";
---

<PageLayout meta={{ title: "Toolkits — PingTraceSSH" }}>
  <section class="toolkits">
    <!-- BACKGROUND FX -->
    <div class="bg fx fx-1"></div>
    <div class="bg fx fx-2"></div>
    <div class="bg grid"></div>

    <!-- HERO -->
    <header class="hero">
      <h1><span class="brand">PingTraceSSH</span> Toolkits</h1>
      <p class="sub">
        Precision-built network tooling with <span class="accent">instant visibility</span>,
        <span class="accent">safe automation</span>, and <span class="accent">compliance-ready</span> guardrails.
      </p>

      <div class="hero-cta">
        <a class="btn btn-primary" href="/download?plan=free">Start Free</a>
        <a class="btn btn-ghost" href="/download?plan=pro">Go Pro</a>
        <a class="btn btn-ghost" href="/download?plan=ultimate">Go Ultimate</a>
      </div>

      <!-- Platform micro-deeplinks -->
      <nav class="platforms" aria-label="platform links">
        <a href="/download?plan=free&platform=windows" class="chip">Windows</a>
        <a href="/download?plan=free&platform=macos" class="chip">macOS</a>
        <a href="/download?plan=free&platform=linux" class="chip">Linux</a>
        <a href="/download?plan=free&platform=android" class="chip">Android</a>
        <a href="/download?plan=free&platform=ios" class="chip">iOS</a>
      </nav>
    </header>

    <!-- SALES STRIP -->
    <section class="strip">
      <div class="stat"><span class="kpi">90%+</span><span class="label">Ticket resolution faster</span></div>
      <div class="divider"></div>
      <div class="stat"><span class="kpi">Zero-Touch</span><span class="label">Rollback-safe automations</span></div>
      <div class="divider"></div>
      <div class="stat"><span class="kpi">Audit-Ready</span><span class="label">CIS / NIST friendly</span></div>
    </section>

    <!-- TIERS -->
    <section class="tiers">
      <!-- FREE -->
      <article class="tier card card-free">
        <div class="edge"></div>
        <div class="card-head">
          <span class="badge">Included</span>
          <h2>Network Essentials</h2>
          <p class="meta">The perfect start — fast diagnostics, simple automation, and clean docs.</p>
        </div>
        <ul class="features">
          <li>
            <i class="ico radar" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Troubleshooting:</span>
              <span class="feat-copy">Ping, Traceroute, DNS, SSH discovery, <em>1-click Health Scan</em></span>
            </div>
          </li>
          <li>
            <i class="ico cog" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Config:</span>
              <span class="feat-copy">Cisco templates, Subnet calculator</span>
            </div>
          </li>
          <li>
            <i class="ico bolt" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Automation:</span>
              <span class="feat-copy">CLI snippet library</span>
            </div>
          </li>
          <li>
            <i class="ico monitor" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Monitoring:</span>
              <span class="feat-copy">Basic NOC, Uptime/Latency, ISP detector</span>
            </div>
          </li>
          <li>
            <i class="ico shield" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Security:</span>
              <span class="feat-copy">Common port scanner</span>
            </div>
          </li>
          <li>
            <i class="ico doc" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Docs:</span>
              <span class="feat-copy">Device inventory template</span>
            </div>
          </li>
        </ul>
        <div class="card-cta">
          <div class="price">$0</div>
          <a class="btn btn-primary" href="/download?plan=free">Download Free</a>
        </div>
      </article>

      <!-- PRO -->
      <article class="tier card card-pro">
        <div class="edge"></div>
        <div class="card-head">
          <span class="badge badge-pro">Popular</span>
          <h2>Pro</h2>
          <p class="meta">Automation, multi-vendor power, and path-level visibility.</p>
        </div>
        <ul class="features">
          <li>
            <i class="ico map" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Troubleshooting:</span>
              <span class="feat-copy">Everything Free + <em>Smart Path Visualizer</em> (Trace + ASN + Map), full health suite</span>
            </div>
          </li>
          <li>
            <i class="ico cog" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Config:</span>
              <span class="feat-copy">Cisco, Juniper, Arista, Palo Alto + Diff w/ syntax</span>
            </div>
          </li>
          <li>
            <i class="ico bolt" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Automation:</span>
              <span class="feat-copy">Bulk push, Scheduled backups, Python/Ansible runner</span>
            </div>
          </li>
          <li>
            <i class="ico monitor" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Monitoring:</span>
              <span class="feat-copy">SNMP dashboard (10 devices), basic discovery</span>
            </div>
          </li>
          <li>
            <i class="ico shield" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Security:</span>
              <span class="feat-copy">Vuln scanner, ACL generator, Rule analyzer, CIS/NIST baseline</span>
            </div>
          </li>
          <li>
            <i class="ico doc" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Docs:</span>
              <span class="feat-copy">Change templates, Audit checklist</span>
            </div>
          </li>
        </ul>
        <div class="card-cta">
          <div class="price">$99/yr <span class="muted">or</span> $10/mo</div>
          <a class="btn btn-ghost strong" href="/download?plan=pro">Download Pro</a>
        </div>
      </article>

      <!-- ULTIMATE -->
      <article class="tier card card-ultimate">
        <div class="edge"></div>
        <div class="card-head">
          <span class="badge badge-ultimate">Best Value</span>
          <h2>Ultimate</h2>
          <p class="meta">A command center: real-time NOC, scale automation, and compliance built-in.</p>
        </div>
        <ul class="features">
          <li>
            <i class="ico radar" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Troubleshooting:</span>
              <span class="feat-copy">Pro + integrated diagnostics (Ping/Trace/DNS/SSL/Ports/Capture), trends</span>
            </div>
          </li>
          <li>
            <i class="ico cog" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Config:</span>
              <span class="feat-copy">Drag-and-drop builder, staged rollouts + rollback, cloud templates (AWS/Azure/GCP)</span>
            </div>
          </li>
          <li>
            <i class="ico bolt" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Automation:</span>
              <span class="feat-copy">One-click deploy, Scheduler, Hybrid orchestrator</span>
            </div>
          </li>
          <li>
            <i class="ico monitor" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Monitoring:</span>
              <span class="feat-copy">Real-time NOC, Alerts (email/SMS/webhooks), Topology overlays, Flow analytics, Anomaly detection</span>
            </div>
          </li>
          <li>
            <i class="ico shield" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Security:</span>
              <span class="feat-copy">Advanced FW optimization, Auto vuln scans, Full compliance engine, Change alerts</span>
            </div>
          </li>
          <li>
            <i class="ico doc" aria-hidden="true"></i>
            <div class="feat-text">
              <span class="feat-title">Docs:</span>
              <span class="feat-copy">Auto-updating network wiki, Change impact visualizer</span>
            </div>
          </li>
        </ul>
        <div class="card-cta">
          <div class="price">$249/yr <span class="muted">or</span> $25/mo</div>
          <a class="btn btn-ghost strong" href="/download?plan=ultimate">Download Ultimate</a>
        </div>
      </article>
    </section>

    <!-- COMPARISON -->
    <section class="compare">
      <h3>Compare at a Glance</h3>
      <div class="table">
        <div class="row header"><div>Capability</div><div>Essentials</div><div>Pro</div><div>Ultimate</div></div>
        <div class="row"><div>Troubleshooting</div><div>Ping/Trace/DNS/SSH, Basic Health</div><div>+ Path Visualizer, Full Health</div><div>+ Integrated Panel, Trends</div></div>
        <div class="row"><div>Config</div><div>Cisco Templates</div><div>Multi-Vendor + Diff</div><div>+ Builder, Rollback, Cloud</div></div>
        <div class="row"><div>Automation</div><div>CLI Snippets</div><div>Bulk Push, Backups, Scripts</div><div>One-Click Deploy, Scheduler, Orchestrator</div></div>
        <div class="row"><div>Monitoring</div><div>Basic NOC, Uptime/Latency, ISP</div><div>SNMP (10), Discovery</div><div>Real-time NOC, Topology, Flow, Anomaly</div></div>
        <div class="row"><div>Security</div><div>Port Scanner</div><div>Vuln, ACL, Rule Analyzer, CIS/NIST</div><div>Optimization, Auto Scans, Compliance, Alerts</div></div>
        <div class="row"><div>Docs</div><div>Inventory</div><div>Change Templates, Audit</div><div>Auto-Wiki, Impact Visualizer</div></div>
      </div>
    </section>

    <!-- CLOSER -->
    <section class="closer">
      <div class="closer-card">
        <div class="edge"></div>
        <h4>Ship with confidence</h4>
        <p>Make fast changes with rollback safety, observability, and compliance that scale with you.</p>
        <div class="closer-cta">
          <a class="btn btn-primary" href="/download?plan=free">Start Free</a>
          <a class="btn btn-ghost" href="/download?plan=pro">Upgrade to Pro</a>
          <a class="btn btn-ghost" href="/download?plan=ultimate">Go Ultimate</a>
        </div>
      </div>
    </section>
  </section>
</PageLayout>

<style>
  :root {
    --bg: #050810;
    --fg: #e8eef6;
    --muted: #a6b0c3;
    --edge-1: #27ffe0;
    --edge-2: #2da0ff;
    --edge-3: #8a5cff;
    --edge-4: #21d07a;
    --glass: rgba(255,255,255,.06);
    --glass-2: rgba(255,255,255,.08);
    --border: rgba(255,255,255,.12);
    --line: rgba(255,255,255,.08);
    --accent: #27ffe0;
    --accent-2: #2da0ff;
    --radius: 16px;
  }

  .toolkits { position: relative; min-height: 100%; color: var(--fg);
    background: radial-gradient(1200px 600px at 60% -10%, rgba(39,255,224,.06), transparent 70%),
                radial-gradient(900px 500px at 10% -20%, rgba(45,160,255,.06), transparent 70%),
                var(--bg); overflow: clip; }

  .bg.grid { position: absolute; inset: 0; pointer-events: none;
    background-image: linear-gradient(to right, rgba(255,255,255,.035) 1px, transparent 1px),
                      linear-gradient(to bottom, rgba(255,255,255,.035) 1px, transparent 1px);
    background-size: 28px 28px;
    mask-image: radial-gradient(1000px 600px at 50% -10%, #000 55%, transparent 80%); }
  .bg.fx { position: absolute; filter: blur(40px); pointer-events: none; }
  .bg.fx.fx-1 { width: 28rem; height: 28rem; top: -8rem; right: -6rem;
    background: radial-gradient(closest-side, rgba(45,160,255,.35), transparent); }
  .bg.fx.fx-2 { width: 22rem; height: 22rem; top: -6rem; left: -8rem;
    background: radial-gradient(closest-side, rgba(33,208,122,.28), transparent); }

  /* HERO */
  .hero { position: relative; padding: clamp(2.2rem, 6vw, 4rem) 1rem 1rem; max-width: 1120px; margin: 0 auto; text-align: center; }
  .brand { background: linear-gradient(90deg, var(--edge-1), var(--edge-2) 35%, var(--edge-3) 70%);
    -webkit-background-clip: text; background-clip: text; color: transparent; filter: drop-shadow(0 0 24px rgba(39,255,224,.25)); }
  .hero h1 { font-size: clamp(2rem, 4.8vw, 3.6rem); letter-spacing: -0.02em; margin: 0 0 .4rem; }
  .sub { color: var(--muted); font-size: clamp(1rem, 1.6vw, 1.2rem); }
  .accent { color: var(--fg); border-bottom: 1px dotted var(--edge-2); }
  .hero-cta { display:flex; gap:.6rem; justify-content:center; flex-wrap:wrap; margin:1rem 0 1.2rem; }

  .btn { display:inline-flex; align-items:center; justify-content:center; gap:.5rem; border-radius:12px;
    padding:.8rem 1.2rem; font-weight:800; letter-spacing:.2px; border:1px solid var(--border); background:var(--glass); color:var(--fg);
    text-decoration:none; backdrop-filter: blur(10px); transition: transform .08s ease, border-color .15s ease, box-shadow .15s ease, background .15s ease;
    box-shadow: inset 0 0 0 1px rgba(255,255,255,.03), 0 10px 30px rgba(0,0,0,.25); }
  .btn:hover { transform: translateY(-1px); border-color: rgba(255,255,255,.25); }
  .btn-primary { background: linear-gradient(90deg, var(--edge-1), var(--edge-2)); color:#041018; border-color:transparent;
    box-shadow: 0 12px 34px rgba(45,160,255,.25); }
  .btn-primary:hover { box-shadow: 0 16px 40px rgba(39,255,224,.25); }
  .btn-ghost { background: rgba(255,255,255,.04); }

  .platforms { display:flex; gap:.5rem; justify-content:center; flex-wrap:wrap; margin-top:.5rem; }
  .chip { display:inline-flex; align-items:center; gap:.4rem; padding:.5rem .8rem; border:1px solid var(--line);
    border-radius:999px; text-decoration:none; color:var(--fg); background: rgba(255,255,255,.03); font-weight:700; font-size:.95rem; }

  /* STRIP */
  .strip { max-width:1120px; margin:1.2rem auto 0; padding:.8rem 1rem; display:grid;
    grid-template-columns: 1fr auto 1fr auto 1fr; gap:1rem; align-items:center; border:1px solid var(--line);
    border-radius:var(--radius); background: linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.02)); backdrop-filter: blur(8px); }
  .strip .divider { width:1px; height:32px; background:var(--line); justify-self:center; }
  .kpi { font-weight:900; font-size:1.1rem; background: linear-gradient(90deg, var(--edge-1), var(--edge-3));
    -webkit-background-clip:text; background-clip:text; color:transparent; }
  .label { display:block; color:var(--muted); font-size:.95rem; margin-top:.1rem; }
  @media (max-width:780px){ .strip{ grid-template-columns:1fr; text-align:center; } .strip .divider{ display:none; } }

  /* TIERS */
  .tiers { max-width:1120px; margin:1.4rem auto; padding:0 1rem; display:grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap:1rem; }
  @media (max-width:1024px){ .tiers{ grid-template-columns:1fr; } }

  .card { position:relative; overflow:clip; border-radius:var(--radius);
    background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); border:1px solid var(--line);
    box-shadow:0 20px 60px rgba(0,0,0,.35); transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease; backdrop-filter: blur(10px); }
  .card:hover { transform: translateY(-4px); border-color: rgba(255,255,255,.2); box-shadow:0 28px 80px rgba(0,0,0,.45); }

  .edge { position:absolute; inset:0; border-radius:inherit; border:1px solid transparent;
    background: linear-gradient(120deg, var(--edge-1), var(--edge-2), var(--edge-3)) border-box;
    -webkit-mask: linear-gradient(#000 0 0) padding-box, linear-gradient(#000 0 0); -webkit-mask-composite: xor; mask-composite: exclude;
    opacity:.22; pointer-events:none; }
  .card-free .edge{ background:linear-gradient(120deg, var(--edge-1), var(--edge-2)) border-box; }
  .card-pro .edge{ background:linear-gradient(120deg, var(--edge-2), var(--edge-3)) border-box; }
  .card-ultimate .edge{ background:linear-gradient(120deg, var(--edge-4), var(--edge-3)) border-box; }

  .card-head { padding:1.1rem 1.1rem .6rem; }
  .badge { display:inline-block; font-weight:900; font-size:.75rem; letter-spacing:.6px; padding:.28rem .55rem; border-radius:6px;
    background: rgba(255,255,255,.08); border:1px solid var(--line); text-transform: uppercase; }
  .badge-pro{ background: rgba(45,160,255,.12); border-color: rgba(45,160,255,.35); }
  .badge-ultimate{ background: rgba(33,208,122,.12); border-color: rgba(33,208,122,.35); }
  .card h2{ font-size: clamp(1.2rem, 2vw, 1.6rem); margin:.4rem 0 .2rem; letter-spacing:.2px; }
  .meta{ color:var(--muted); }

  /* FIXED FEATURE LIST LAYOUT */
  .features { padding:.2rem 1.1rem .9rem; display:grid; gap:.55rem; }
  .features li {
    list-style:none; display:grid; grid-template-columns: 28px 1fr; gap:.6rem; align-items:start;
    word-break: normal; overflow-wrap: break-word;
  }
  .features li > i { width:24px; height:24px; margin-top:.2rem; opacity:.95; }
  .feat-text { display:block; white-space: normal; line-height: 1.45; }
  .feat-title { font-weight:800; margin-right:.35rem; white-space: nowrap; }
  .feat-copy { display:inline; }
  .features em { color:#cde8ff; font-style:normal; }

  /* Simple icon shapes */
  .ico.radar { background: radial-gradient(circle at 30% 40%, #7efcff 2px, transparent 3px),
                          conic-gradient(from 0.25turn, #27ffe0, #2da0ff, #8a5cff, #27ffe0);
               -webkit-mask: radial-gradient(circle, #000 55%, transparent 56%); border-radius:50%; }
  .ico.cog   { background: conic-gradient(#2da0ff 0 10%, transparent 10% 20%, #2da0ff 20% 30%, transparent 30% 40%, #2da0ff 40% 50%, transparent 50% 60%, #2da0ff 60% 70%, transparent 70% 80%, #2da0ff 80% 90%, transparent 90% 100%); border-radius:50%; }
  .ico.bolt  { background: linear-gradient(135deg, #8a5cff, #27ffe0); clip-path: polygon(45% 0, 35% 40%, 60% 40%, 25% 100%, 35% 60%, 10% 60%); }
  .ico.monitor{ background: linear-gradient(180deg, #27ffe0, #2da0ff); border-radius:3px; box-shadow: inset 0 -6px 0 0 rgba(0,0,0,.35); }
  .ico.shield{ background: conic-gradient(from 0.6turn, #2da0ff, #8a5cff, #27ffe0); clip-path: polygon(50% 0%, 95% 25%, 80% 100%, 50% 80%, 20% 100%, 5% 25%); }
  .ico.doc   { background: linear-gradient(180deg, #c7d2fe, #a5b4fc); border-radius:3px; box-shadow: inset 0 0 0 2px rgba(10,16,24,.6); }
  .ico.map   { background: linear-gradient(90deg, #27ffe0, #8a5cff); clip-path: polygon(50% 0, 65% 35%, 100% 40%, 75% 60%, 85% 100%, 50% 75%, 15% 100%, 25% 60%, 0 40%, 35% 35%); }

  .card-cta { padding:.8rem 1.1rem 1.1rem; display:flex; align-items:center; justify-content:space-between; gap:.8rem; flex-wrap:wrap;
    border-top:1px dashed var(--line); background: linear-gradient(180deg, rgba(255,255,255,.02), rgba(255,255,255,.01)); }
  .price { font-size:1.1rem; font-weight:900; letter-spacing:.3px; }
  .muted { color:var(--muted); }
  .strong { font-weight:900; }

  /* COMPARISON */
  .compare { max-width:1120px; margin:1.2rem auto 0; padding:0 1rem; }
  .compare h3 { font-size:1.2rem; letter-spacing:.3px; margin-bottom:.6rem; }
  .table { border:1px solid var(--line); border-radius:var(--radius); overflow:hidden; background: rgba(255,255,255,.03); backdrop-filter: blur(8px); }
  .row { display:grid; grid-template-columns: 1.2fr 1fr 1fr 1fr; gap:.6rem; padding:.75rem 1rem; border-bottom:1px solid var(--line); }
  .row:last-child{ border-bottom:none; }
  .row.header { background: rgba(255,255,255,.04); font-weight:900; letter-spacing:.3px; }
  @media (max-width:980px){ .row{ grid-template-columns:1fr; } .row.header{ display:none; } }

  /* CLOSER */
  .closer { max-width:1120px; margin:1.2rem auto 2.2rem; padding:0 1rem; }
  .closer-card { position:relative; overflow:clip; border-radius:var(--radius); border:1px solid var(--line);
    background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03)); padding:1.1rem; text-align:center;
    box-shadow:0 18px 60px rgba(0,0,0,.4); }
  .closer-card .edge { opacity:.25; }
  .closer h4 { font-size:1.2rem; letter-spacing:.3px; margin:.2rem 0 .3rem; }
  .closer p { color:var(--muted); margin:0 0 .8rem; }
  .closer-cta { display:flex; gap:.6rem; justify-content:center; flex-wrap:wrap; }

  /* Motion safety */
  @media (prefers-reduced-motion: reduce){ .btn, .card, .btn-primary{ transition:none; } .bg.fx{ display:none; } }
</style>
