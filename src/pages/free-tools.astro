---
import PageLayout from "@/layouts/Base.astro";
---

<PageLayout meta={{ title: "Free Tools" }}>
  <section class="tool-wrapper">
    <h1>Free Tools</h1>
    <p>All the goodies from the Lead Generator toolkit + more, updated regularly.</p>

    <style>
      .tools-grid-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 30px;
        padding: 0 1rem;
      }
      .tools-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        width: 100%;
        max-width: 1200px;
      }

      .tool-card {
        background: #1e1e1e;
        border: 1px solid #333;
        border-radius: 12px;
        text-align: center;
        padding: 20px;
        transition:
          transform 0.2s ease,
          background 0.2s ease;
      }

      .tool-card:hover {
        transform: scale(1.05);
        background: #262626;
      }

      .tool-card img {
        display: block;
        margin: 0 auto 16px auto;
        width: 100%;
        max-width: 300px;
        height: auto;
        aspect-ratio: 4 / 3;
        object-fit: contain;
      }

      .tool-card a {
        color: #0ff;
        text-decoration: none;
        font-weight: bold;
        display: block;
        font-size: clamp(1rem, 2vw, 1.2rem);
      }

      .tool-card a:hover {
        text-decoration: underline;
      }
    </style>

    <h2>Free Networking Tools</h2>
    <div class="tools-grid-wrapper">
      <div class="tools-grid">
        <div class="tool-card">
          <a href="/free-tools/traceroute-map" aria-label="Open Traceroute Map">
            <img src="/geo.png" alt="Traceroute Map" loading="lazy" />
            Traceroute Map
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/isp-info" aria-label="Open ISP Info">
            <img src="/tele.png" alt="ISP Info" loading="lazy" />
            ISP Info
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/subnet-calculator" aria-label="Open Subnet Calculator">
            <img src="/calc.png" alt="Subnet Calculator" loading="lazy" />
            Subnet Calculator
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/noc-mode" aria-label="Open NOC Mode">
            <img src="/noc.png" alt="NOC Mode" loading="lazy" />
            NOC Mode
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/dns-checker" aria-label="Open DNS Checker">
            <img src="/at.png" alt="DNS Checker" loading="lazy" />
            DNS Checker
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/config-generator" aria-label="Open Config Generator">
            <img src="/gene.png" alt="Config Generator" loading="lazy" />
            Config Generator
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/port-scanner" aria-label="Open Port Scanner">
            <img src="/scanner.png" alt="Port Scanner" loading="lazy" />
            Port Scanner
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/ping-monitor" aria-label="Open Ping Monitor">
            <img src="/monitor.png" alt="Ping Monitor" loading="lazy" />
            Ping Monitor
          </a>
        </div>

        <div class="tool-card">
          <a href="/free-tools/outage-detector" aria-label="Open Outage Detector">
            <img src="/outage.png" alt="Outage Detector" loading="lazy" />
            Outage Detector
          </a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
